{% extends "backBundle::principal.html.twig" %}

{% block title %}Personne{% endblock %}

{% block body %}
    <h1>Personne list</h1>

    <a href="{{ path('personne_new') }}">Ajouter une personne</a>
    
    <table style="width:100%" border="1">
        
        <tr align="center">
            <th>Nom</th>
            <th>Prenom</th>
            <th>Photo</th>
        </tr>
        {% for personne in list %}
            <tr align="center">
                <td>{{ personne.nom }}</td>
                <td>{{ personne.prenom }}</td>
                <td>{{ personne.photo }}</td>
                <td><a href="{{ path('personne_delete', { 'id': personne.id }) }}">Supprimer</a></td> 
                <td><a href="{{ path('personne_edit', { 'id': personne.id }) }}">Modifier</a></td>
            </tr>
        {% endfor%}
    </table>
        
{% endblock %}
