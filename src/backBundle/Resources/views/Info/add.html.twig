{% extends "backBundle::principal.html.twig" %}

{% block title %}{{ type }}{% endblock %}

{% block body %}

    <form action="{{ path('info_add', {'type': type } ) }}" method="POST">
        
        <div class="container">
            <div class="row">
                <label for="info_titre" class="col-lg-2">Titre</label>
                <input type="text" class="col-lg-4" id="info_titre" name="titre" required="required" maxlength="255">
            </div>
            <div class="row">
                <label for="info_text" class="col-lg-2">Contenue</label>
                <textarea id="info_text" class="col-lg-4" name="texte" required="required" maxlength="255"></textarea>
            </div>
            <div class="row">
                <label for="info_date" class="col-lg-2">Date</label>
                <input type="date" class="col-lg-4" id="info_date" name="date" required="required" maxlength="255">
            </div>
            <input type="hidden" id="sary" value="{{ type }}" name="type"/>
        </div>

        
        <input type="submit" value="Create">
        
    </form>

{% endblock %}
