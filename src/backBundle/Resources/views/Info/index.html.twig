{% extends "backBundle::principal.html.twig" %}

{% block title %}Info{% endblock %}

{% block body %}
    <a href="{{ path('info_add')}}">Ajouter fil d'info</a>
    </br>
    
    <table style="width:100%" border="1">
        
        <tr align="center">
            <th>Type Info</th>
            <th>Titre</th>
            <th>Texte</th>
            <th>Date</th>
        </tr>
        {% for info in infos %}
            <tr align="center">
                <td>{{ info.type.libelle }}</td>
                <td>{{ info.titre }}</td>
                <td>{{ info.texte }}</td>
                <td>{{ info.date|date('Y-m-d') }}</td>
                <td><a href="{{ path('info_delete', { 'id': info.id }) }}">Supprimer</a></td> 
                <td><a href="{{ path('info_update_view', { 'id': info.id }) }}">Modifier</a></td> 
            </tr>
        {% endfor%}
    </table>
    
    </br>
    

{% endblock %}
