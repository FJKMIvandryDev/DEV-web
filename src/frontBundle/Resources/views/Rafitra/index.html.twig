{% block JSPerso %}
    <script>
        onglet = {
            clickO: function(ongletName) 
            {
                var url = "{{ baseUrl }}/front/rafitra/sampana/";

                if ( $("#".concat(ongletName)).children().length <= 0 ) 
                {
                    $.get(url.concat(ongletName),function(data)
                    {
                        $("#".concat(ongletName)).append(data);
                        $(document).scrollTop( $("#sampana-page").offset().top );
                    });
                }
            }
        }
    </script>
    <script>
        $(document).ready(function () {
                onglet.clickO("{{id}}");
          });
    </script>
{% endblock %}