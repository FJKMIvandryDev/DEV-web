{% extends "frontBundle::principal.html.twig" %}

{% block body %}
    <div class="allign">
	<!-- DIV HAUT -->
    <div class="gallery"> 
	<div class="row">		
            <div class="col-lg-12">            
		        <!-- Fil d'ariane -->
                <div class="fil_ariane">
                    <div class="row">
                        <div class="col-lg-12">
                        <span class="petit_gras">Tongasoa > </span><span class="ariane">Sary</span>
                        </div>
                    </div>
                </div>
                <!-- fin fil d'ariane -->

                <!-- titre sary -->
                <div class="row">
                    <div class="col-lg-12">
                    <t3>SARY</t3>
                    </div>
                </div>
                <!-- fin titre sary -->
                
                <!-- gallery -->
                
                <!-- ligne 1 -->
                <div class="row">
                    
                    {% set indexArtcleActu = 0 %}
                    {% for album in albums %}
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
                            <div class="sary">
                                <a href="{{ path('front_album_show',{ 'id': album.id }) }}">
                                    <img src="{{ asset(album.jacket)}}" width="100%" />
                                </a>
                                <p></p>
                                <span class="ariane"> {{ album.name }} </span>
                                <p></p>
                                <span class="petit_gras"> {{ jourArray['_'~album.date|date('D')] }} {{ album.date|date('d') }} {{ moisArray['_'~album.date|date('F')] }} {{ album.date|date('Y') }} </span>
                                <p></p>
                                    {{ album.description }}
                                <p></p>
                                <div class='album' style='display:none;'>
                                    {{ album.id }}
                                </div>
                            </div>       
                        </div>  
                                    
                        {% set indexArtcleActu = indexArtcleActu+1 %}
                    {% endfor %}
                        
            <!-- fin gallery -->
            
                <!-- pagination -->
                <div class="row">
                    <div class="col-md-12 text-center">
                        <ul class = "pagination pagination-lg">
                            <li><a href = "#">&laquo;</a></li>
                            <li><a href = "#">1</a></li>
                            <li><a href = "#">2</a></li>
                            <li><a href = "#">3</a></li>
                            <li><a href = "#">4</a></li>
                            <li><a href = "#">5</a></li>
                            <li><a href = "#">&raquo;</a></li>
                        </ul>
                    </div>
                </div><!-- fin pagination -->                            
	    </div>
	</div>
	<!-- FIN DIV HAUT -->
    </div>	
</div>

{% endblock %}