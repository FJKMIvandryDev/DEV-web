                                        {% else %}
                                            <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP }}&samyhafaCP={{ i }}">{{ i }}</a></li>
                                        {% endif %}
                                    {% endfor %}
                                {% elseif samihafaCP>2%}
                                    <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP }}&samyhafaCP={{ samihafaCP - 2 }}">{{ samihafaCP - 2 }}</a></li>
                                    <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP }}&samyhafaCP={{ samihafaCP - 1 }}">{{ samihafaCP - 1 }}</a></li>
                                    <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP }}&samyhafaCP={{ samihafaCP }}" style="background-color:powderblue;">{{ samihafaCP }}</a></li>
                                    <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP }}&samyhafaCP={{ samihafaCP + 1 }}">{{ samihafaCP + 1 }}</a></li>
                                    <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP }}&samyhafaCP={{ samihafaCP + 2 }}">{{ samihafaCP + 2 }}</a></li>
                                {% else %}
                                    {% for i in 1..5 %}
                                        {% if i == samihafaCP%}
                                            <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP }}&samyhafaCP={{ i }}" style="background-color:powderblue;">{{ i }}</a></li>
                                        {% else %}
                                            <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP }}&samyhafaCP={{ i }}">{{ i }}</a></li>
                                        {% endif %}
                                    {% endfor %}
                                    {#<li><a href = "{{ path('fampianarana_index') }}?toritenyCP=1&samyhafaCP={{ samihafaCP }}">1</a></li>
                                    <li><a href = "{{ path('fampianarana_index') }}?toritenyCP=2&samyhafaCP={{ samihafaCP }}">2</a></li>
                                    <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP }}&samyhafaCP={{ samihafaCP }}">{{ toritenyCP}}</a></li>
                                    <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP + 1 }}&samyhafaCP={{ samihafaCP }}">{{ toritenyCP + 1 }}</a></li>
                                    <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP + 2 }}&samyhafaCP={{ samihafaCP }}">{{ toritenyCP + 2 }}</a></li>#}
                                {% endif %}

                                {% if samihafaCP+1<=totalPageSamihafa %}
                                    <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP }}&samyhafaCP={{ samihafaCP + 1 }}">&raquo;</a></li>
                                {% else%}
                                    <li><a href = "#">&raquo;</a></li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                    <!-- fin pagination -->             
                </div>
            </div>
        </div>
    </div>    
    <!-- FIN DIV BAS -->
    
{% endblock %}


{% block JSPerso %}
    <script src="{{ asset('bundles/front/ivandry/js/holder.min.js') }}" charset="utf-8"></script>
    <script src="{{ asset('bundles/front/ivandry/js/jquery.colorbox-min.js') }}"></script>
    <script>
        (function($){
            $(window).load(function(){

                $(".inline").colorbox({
                        inline:true, 
                        width:"80%",
                        height:"100%"
                });

                $("#cboxLoadedContent").mCustomScrollbar({
                        live:true,
                        theme:"inset-dark"
                });

            });
        })(jQuery);
    </script>
{% endblock %}