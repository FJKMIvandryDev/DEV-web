{% extends "frontBundle::principal.html.twig" %}

{% block headPerso %}
    <link rel="stylesheet" href="{{ asset('bundles/front/ivandry/css/colorbox.css') }}" />
	
    <style>
        #cboxLoadedContent{ overflow-y: hidden; }
        #inline_content hr{ border-top-color: rgba(0,0,0,0.2); }
        #inline_content h2{ color: inherit; }
        #cboxContent .mCSB_scrollTools{ margin-right: 5px; }
    </style>
{% endblock %}
	
{% block body %}
    
    <!-- DIV HAUT -->
    <div class="allign">
        <div class="fampianarana_alahady"> 
	    <div class="row">		
                <div class="col-lg-12">            
                            <!-- Fil d'ariane -->
                    <div class="fil_ariane">
                        <div class="row"><div class="col-lg-12">
                        <span class="petit_gras">Tongasoa > </span><span class="ariane">Fampianarana</span>
                        </div></div>
                    </div>
                    <!-- fin fil d'ariane -->

                    <!-- titre alahady -->
                    <div class="row"><div class="col-lg-12">
                        <t3>ISAK'ALAHADY</t3>
                    </div></div>
                    <!-- fin titre alahady -->

                    <!-- topic fampianarana -->
                    <!-- ligne 1 -->
                    
                    {% set indexArtcleActu = 0 %}
                    {% for count in toritenyAlahadyCount %}
                        <div id="totalToritenyAlahady" style="visibility: hidden">{{ count }}</div>
                    {% endfor%}
                    <div class="row">
                        {% for i in isakAlahady if indexArtcleActu<8 %}
                            <div style='display:none;'>
                                <div id='toritenyAlahady{{ indexArtcleActu }}' style='padding:10px; background:#fff;'>
                                            {{ i.texte.contenu|raw }}
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                                <div class="fampianarana_bloc">
                                    <div class="id" style="visibility: hidden">{{ i.id }}</div>
                                    <a class='inline' href="#toritenyAlahady{{ indexArtcleActu }}">
                                        <img src="{{ asset(i.imageJacket)}}" width="100%" />
                                        <p></p>
                                        <span class="petit_gras"> {{ i.date|date('Y-m-d') }} : {{ i.titre }} </span>
                                    </a>
                                    <p></p>
                                        {{ i.description }}
                                    <p></p>
                                    <span class="petit_gras">Tohiny <a class='inline' href="#toritenyAlahady{{ indexArtcleActu }}"><img src="{{ asset('web/images/ivandry/suite.png')}}" class="picto" /></a></span>

                                    <span class="pull-right">
                                    {#<a href="#">#}<img src="{{ asset('web/images/ivandry/picto1.png')}}" class="picto" />{#</a>#}
                                    {#<a href="#">#}<img src="{{ asset('web/images/ivandry/picto2.png')}}" class="picto" />{#</a>#}
                                    {#<a href="#">#}<img src="{{ asset('web/images/ivandry/picto3.png')}}" class="picto" />{#</a>#}
                                    </span>

                                    <p></p>
                                </div>            
                            </div>
                            {% set indexArtcleActu = indexArtcleActu+1 %}
                            {% if indexArtcleActu == 4%}
                                </div>
                                <div class="row">
                            {% endif%}
                        {% endfor %}
                    </div>                
                </div><!-- fin topic fampianarana -->

                <!-- pagination -->
                <div class="row">
                    <div class="col-md-12 text-center">
                        <ul class = "pagination pagination-lg">
                            {% if toritenyCP - 1 >=1 %}
                                <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP - 1 }}&samyhafaCP={{ samihafaCP }}">&laquo;</a></li>
                            {% else %}
                                <li><a href = "#">&laquo;</a></li>
                            {% endif %}
                            
                            {% if totalPageToriteny <= 5 %}
                                {% for i in 1..totalPageToriteny %}
                                    {% if i == toritenyCP%}
                                        <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ i }}&samyhafaCP={{ samihafaCP }}" style="background-color:powderblue;">{{ i }}</a></li>
                                    {% else %}
                                        <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ i }}&samyhafaCP={{ samihafaCP }}">{{ i }}</a></li>
                                    {% endif %}
                                {% endfor %}
                            {% elseif toritenyCP>2%}
                                <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP - 2 }}&samyhafaCP={{ samihafaCP }}">{{ toritenyCP - 2 }}</a></li>
                                <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP - 1 }}&samyhafaCP={{ samihafaCP }}">{{ toritenyCP - 1 }}</a></li>
                                <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP }}&samyhafaCP={{ samihafaCP }}" style="background-color:powderblue;">{{ toritenyCP}}</a></li>
                                <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP + 1 }}&samyhafaCP={{ samihafaCP }}">{{ toritenyCP + 1 }}</a></li>
                                <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP + 2 }}&samyhafaCP={{ samihafaCP }}">{{ toritenyCP + 2 }}</a></li>
                            {% else %}
                                {% for i in 1..5 %}
                                    {% if i == toritenyCP%}
                                        <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ i }}&samyhafaCP={{ samihafaCP }}" style="background-color:powderblue;">{{ i }}</a></li>
                                    {% else %}
                                        <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ i }}&samyhafaCP={{ samihafaCP }}">{{ i }}</a></li>
                                    {% endif %}
                                {% endfor %}
                                {#<li><a href = "{{ path('fampianarana_index') }}?toritenyCP=1&samyhafaCP={{ samihafaCP }}">1</a></li>
                                <li><a href = "{{ path('fampianarana_index') }}?toritenyCP=2&samyhafaCP={{ samihafaCP }}">2</a></li>
                                <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP }}&samyhafaCP={{ samihafaCP }}">{{ toritenyCP}}</a></li>
                                <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP + 1 }}&samyhafaCP={{ samihafaCP }}">{{ toritenyCP + 1 }}</a></li>
                                <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP + 2 }}&samyhafaCP={{ samihafaCP }}">{{ toritenyCP + 2 }}</a></li>#}
                            {% endif %}
                            
                            {% if toritenyCP+1<=totalPageToriteny %}
                                <li><a href = "{{ path('fampianarana_index') }}?toritenyCP={{ toritenyCP + 1 }}&samyhafaCP={{ samihafaCP }}">&raquo;</a></li>
                            {% else%}
                                <li><a href = "#">&raquo;</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
                <!-- fin pagination -->                            
	    </div>
	</div>
	<!-- FIN DIV HAUT -->
    </div>
    <!-- DIV MENU AU MILIEU -->
    
    
	<div class="row">
            <div class="head_banner">

            <!--MENU -->
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" >

                </div>
            </div>
        </div>    

    <!-- FIN DIV MENU AU MILIEU -->

    <!-- DIV BAS -->
    
    <div class="samihafa"> 
	<div class="allign">    
            <div class="row">		
                <div class="col-lg-12">     
                    
                    <!-- titre alahady -->
                    <div class="row"><div class="col-lg-12">
                        <t3>SAMIHAFA</t3>
                    </div></div>
                    <!-- fin titre alahady -->
                    
                    {% set indexArtcleActu = 0 %}
                    {% for count in samihafaCount %}
                        <div id="totalSamihafa" style="visibility: hidden">{{ count }}</div>
                    {% endfor%}
                    <div class="row">
                        {% for i in samihafa if indexArtcleActu<8 %}
